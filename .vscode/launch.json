    "version": "0.2.0",
    "configurations": [
        {
            "name": "Train",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/code/run.py"
        },
        {
            "name": "Train - Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/code/run.py",
            "args": ["trainer=debug_trainer"]
        },
        {
            "name": "Train - Debug, Fashion",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/code/run.py",
            "args": ["trainer=debug_trainer", "datamodule=fashionmnist_datamodule"]
        },
        {
            "name": "Train - Debug, Deskew",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/code/run.py",
            "args": ["trainer=debug_trainer", "datamodule.deskew=true"]
        },
        {
            "name": "Train - GPU",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/code/run.py",
            "args": ["trainer.gpus=1", "model.gpu=true"]
        },
        {
            "name": "Train - Debug, GPU",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/code/run.py",
            "args": ["trainer=debug_trainer", "trainer.gpus=1", "model.gpu=true"]
        },
        {
            "type": "python",
            "request": "launch",
            "name": "Current File",
            "program": "${file}"
        }
    ]
}